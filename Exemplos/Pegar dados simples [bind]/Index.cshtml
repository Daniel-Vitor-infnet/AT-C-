@page
@model AT.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Formulário";
}

<h2>Preencha os dados</h2>

<form method="post">
    <div>
        <label>Nome:</label>
        <input type="text" name="Nome" />
    </div>
    <div>
        <label>Idade:</label>
        <input type="number" name="Idade" />
    </div>
    <button type="submit">Enviar</button>
</form>

@if (Model.Nome != null)
{
    <p>Nome: @Model.Nome</p>
    <p>Idade: @Model.Idade</p>
}

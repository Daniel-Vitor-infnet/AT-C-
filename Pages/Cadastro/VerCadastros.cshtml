@page
@model AT.Pages.Cadastro.Index1Model

<h2>Lista de Clientes</h2>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nome</th>
			<th>Email</th>
			<th>CPF</th>
			<th>Destinos</th>
		</tr>
	</thead>
	<tbody>
        @if (Model.Clientes == null || !Model.Clientes.Any())
        {
            <tr>
                <td colspan="5">Ainda não temos clientes cadastrados</td>
            </tr>
        }
        else
        {
            @foreach (var cliente in Model.Clientes)
            {
                <tr>
                    <td>@cliente.ClienteID</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Cpf</td>
                </tr>
            }
        }

	</tbody>
</table>

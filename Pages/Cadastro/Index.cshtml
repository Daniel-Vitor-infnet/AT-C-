@page
@model AT.Pages.Cadastro.IndexModel

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

<h1 style ="margin-bottom:40px">Cadastro de Usuário</h1>

<form method="post">
	<div>
		<label>Nome:</label>
		<div>
			<input asp-for="Cliente.nome" />
			<span asp-validation-for="Cliente.nome"></span>
		</div>
	</div>
	<div>
		<label>Idade:</label>
		<div>
			<input asp-for="Cliente.idade" type="number" />
			<span asp-validation-for="Cliente.idade"></span>
		</div>
	</div>
	<div>
		<label>CPF:</label>
		<div>
			<input asp-for="Cliente.cpf" />
			<span asp-validation-for="Cliente.cpf"></span>
		</div>
	</div>
	<div>
		<label>Email:</label>
		<div>
			<input asp-for="Cliente.email" />
			<span asp-validation-for="Cliente.email"></span>
		</div>
	</div>
	<button style="margin-top:20px" type="submit">Enviar</button>
</form>



<h6 style="margin-top:40px">Fiz validações aí para ajudar na correção fiz esse prenchimento</h6>

@page
@model AT.Pages.PacotesTuristicos.CreateModel

<h2>Criar Pacote Turístico</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Pacote.NomeDoPacote"></label>
        <input asp-for="Pacote.NomeDoPacote" class="form-control" />
        <span asp-validation-for="Pacote.NomeDoPacote" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pacote.DataDaViagem"></label>
        <input asp-for="Pacote.DataDaViagem" type="date" class="form-control" />
        <span asp-validation-for="Pacote.DataDaViagem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pacote.CapacidadeMax"></label>
        <input asp-for="Pacote.CapacidadeMax" type="number" min="1" class="form-control" />
        <span asp-validation-for="Pacote.CapacidadeMax" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pacote.Preco"></label>
        <input asp-for="Pacote.Preco" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Pacote.Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pacote.PaisDestinoId">País</label>
        <select id="paisSelect" asp-for="Pacote.PaisDestinoId" asp-items="Model.Paises" class="form-control">
            <option value="">-- selecione o país --</option>
        </select>
        <span asp-validation-for="Pacote.PaisDestinoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedCidadeId">Cidade</label>
        <select id="cidadeSelect" asp-for="SelectedCidadeId" class="form-control" disabled>
            <option value="">-- selecione o país primeiro --</option>
        </select>
        <span asp-validation-for="SelectedCidadeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('paisSelect').addEventListener('change', function() {
          var paisId = this.value;
          var cidadeSelect = document.getElementById('cidadeSelect');

          if (!paisId) {
            cidadeSelect.innerHTML = '<option value="">-- selecione o país primeiro --</option>';
            cidadeSelect.disabled = true;
            return;
          }

          cidadeSelect.innerHTML = '<option>Carregando...</option>';
          cidadeSelect.disabled = true;

          fetch(`?handler=Cidades&paisDestinoId=${paisId}`)
            .then(res => res.json())
            .then(data => {
              cidadeSelect.innerHTML = '<option value="">-- selecione a cidade --</option>';
              data.forEach(function(c) {
                var opt = document.createElement('option');
                opt.value = c.cidadeID;
                opt.text  = c.nome;
                cidadeSelect.appendChild(opt);
              });
              cidadeSelect.disabled = false;
            });
        });
    </script>
}

@page
@model AT.Pages.Cidades.VerCidadesModel
@{
    ViewData["Title"] = "Lista de Cidades";
}

<h2>Lista de Cidades</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>País</th>
            <th>Habitantes</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Cidades == null || !Model.Cidades.Any())
        {
            <tr>
                <td colspan="5">Nenhuma cidade cadastrada.</td>
            </tr>
        }
        else
        {
            foreach (var cidade in Model.Cidades)
            {
                <tr>
                    <td>@cidade.CidadeID</td>
                    <td>@cidade.Nome</td>
                    <td>@cidade.PaisDestino?.Pais</td>
                    <td>@cidade.NumHabitantes</td>
                    <td>
                        <a asp-page="EditarCidades" asp-route-id="@cidade.CidadeID" class="btn btn-sm btn-primary">Editar</a>
                        <form method="post" asp-page-handler="Excluir" asp-route-id="@cidade.CidadeID" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
